<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup"
    android:background="@color/background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Регистрация"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/avenir_next"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"/>

    <ImageView
        android:id="@+id/Back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/back"

        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:onClick="onClick"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Электронная почта"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/avenir_next"

        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/textView"/>

    <EditText
        android:id="@+id/Email1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"

        android:textColor="@color/white"
        android:textSize="15dp"
        android:fontFamily="@font/avenir_next"
        android:hint="example@gmail.com"
        android:paddingLeft="10dp"

        android:background="@drawable/background_edit_text_grey"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/textView2"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Пароль"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/avenir_next"

        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/Email1"/>

    <EditText
        android:id="@+id/Password1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"

        android:textColor="@color/white"
        android:textSize="15dp"
        android:fontFamily="@font/avenir_next"
        android:hint="Не менее 6 символов"
        android:paddingLeft="10dp"

        android:background="@drawable/background_edit_text_grey"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/textView4"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Имя"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/avenir_next"

        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/Password1"/>

    <EditText
        android:id="@+id/Name1"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:textColor="@color/white"
        android:textSize="15dp"
        android:fontFamily="@font/avenir_next"
        android:hint="Имя будет видно всем пользователям"
        android:paddingLeft="10dp"

        android:background="@drawable/background_edit_text_grey"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/textView6"/>

    <Button
        android:id="@+id/registr1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:text="Зарегистрироваться"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:textStyle="bold"
        android:fontFamily="@font/avenir_next"

        android:background="@drawable/background_button_orange"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Name1"
        />
</RelativeLayout>